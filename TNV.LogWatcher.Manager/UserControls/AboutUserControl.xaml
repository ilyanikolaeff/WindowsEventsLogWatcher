<UserControl x:Class="TNV.LogWatcher.Manager.UserControls.AboutUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TNV.LogWatcher.Manager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" Margin="5">
        <Image Source="/Images/work.jpg" Height="200" Width="500" />
        <TextBlock x:Name="aboutTextBlock" Text="{Binding AboutText}" TextWrapping="Wrap" HorizontalAlignment="Center" Margin="5" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Сброс настроек" Margin="5" x:Name="restoreDefaultButton" />
        </StackPanel>
    </StackPanel>
</UserControl>
